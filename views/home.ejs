  <h3 class="text-center my-5">New Arrival</h3>
  <div class="container mx-auto">
<div class="row ">
    <% for(let i = 0 ; i < 8 ; i ++) {%>
    <div class="mb-3 col">
      <div class="card" style="width: 18rem">
        <% if(currentUser){%>
            <form class="form"
                action="/user/<%= currentUser._id %>/shoppingcart/<%= products[i]._id %>"
                method="post"
              >
         <% } %> 
         <div style="min-height: 218px;">
          <a href="/products/<%= products[i]._id %>">
           <img src="<%= products[i].images[0].url %>" class="card-img-top" alt=""  />
           </a>
        <div class="hidden show-detail text-center">
          <div class="mb-2">
           <a class="seeDetail" href="/products/<%= products[i]._id %>">See more detail</a>

          </div>
           <div class="row">
           <div class="col-6">
              <select class="form-select form-select-sm mb-1" name="size" id="">
                <% for(let s of products[i].size){%>
                <option value="<%= s %>">
                  <%= String(s).toUpperCase().slice(1) %>
                </option>
                <%} %>
              </select>
            </div>
            <div class="col-6">
              <select class="mb-1 form-select form-select-sm" name="color" id="">
                <% for(let c of products[i].color){%>
                <option value="<%= c %>">
                  <%= c.slice(1,2).toUpperCase() + c.slice(2) %>
                </option>
                <%} %>
              </select>
            </div>
            </div>
        </div>
         </div>
        
        <div class="card-body">
    <div class="mb-3">
          <h6 class="card-title d-inline" ><%= products[i].products %></h6><span class="price"><%= products[i].price %> â‚¬</span>      
    </div>

          
          <div class="row">
           
            <div class="col-8">
              <input value="1" min="0" type="number" name="qty" class="form-control form-control-sm" id="" required>
            </div>
            <div class="col-4 mb-2">
              <input value="Add" type="submit" class="float-end card-link btn btn-sm btn-outline-primary"
                >
            </div>
            </form>
            <% if(currentUser && admin){ %> 
            <form
              action="/products/<%= products[i]._id %>?_method=DELETE"
              method="post"
              class="col-6"
            >
              <button class="btn btn-outline-danger btn-sm" type="submit">
                Delete
              </button>
            </form>
            <a
              href="/products/<%= products[i]._id %>/edit"
              class="btn btn-outline-secondary btn-sm col-6"
              >Edit</a
            >
            <% } %> 
          </div>
        </div>
      </div>
  
  
    </div>
