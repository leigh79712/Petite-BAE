<% layout('/layout/boilerplate') -%>
<div class="container">
  <div class="row">
    <% for(let product of products) {%>
    <div class="mb-3 col">
      <div class="card" style="width: 18rem">
        <a href="/products/<%= product._id %>">
          <img src="<%= product.images %>" class="card-img-top" alt="" />
        </a>
        <div class="card-body">
          <h5 class="card-title"><%= product.products %></h5>
          <div class="row">
            <div class="col-6">
              <select class="col-12 form-select mb-1" name="size" id="">
                <% for(let s of product.size){%>
                <option value="<%= s %>">
                  <%= String(s).toUpperCase().slice(1) %>
                </option>
                <%} %>
              </select>
            </div>
            <div class="col-6">
              <select class="mb-1 form-select" name="color" id="">
                <% for(let c of product.color){%>
                <option value="<%= c %>">
                  <%= c.slice(1,2).toUpperCase() + c.slice(2) %>
                </option>
                <%} %>
              </select>
            </div>
            <div class="col-6"><p><%= product.price %></p></div>
            <div class="col-6">
              <a href="#" class="card-link btn btn-sm btn-outline-primary"
                >ADD</a
              >
            </div>
            <form
              action="/products/<%= product._id %>?_method=DELETE"
              method="post"
              class="col-6"
            >
              <button class="btn btn-outline-danger" type="submit">
                Delete
              </button>
            </form>
            <a
              href="/products/<%= products._id %>/edit"
              class="btn btn-outline-secondary col-6"
              >Edit</a
            >
          </div>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>
