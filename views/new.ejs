<% layout('/layout/boilerplate') -%>
<script>
  const newSize  = <%- JSON.stringify(size) %>
  const newColor  = <%- JSON.stringify(color) %>

</script>
<script defer src="/javascript/newFrom.js"></script>
<link rel="stylesheet" href="/css/form.css" />

<h1 class="text-center">Add New Product</h1>
<div class="col-md-6 offset-md-3">
  <form id="newProduct" class="form" action="/products" method="post">
  <div class="mb-3">
    <label class="form-lable" for="porducts">Products</label>
    <input form="newProduct" class="form-control" type="text" name="product[products]" />
  </div>
  <div class="mb-3">
    <label class="form-lable" for="price">Price</label>
    <input id="newProduct" class="form-control" type="number" name="product[price]" />
  </div>
  <div class="mb-3">
    <label class="form-lable" for="images">Images</label>
    <input form="newProduct" class="form-control" type="text" name="product[images]" />
  </div>

  <!-- size -->
  <div class="mb-3">
    <label class="form-lable" for="size">Size</label>
    <div class="size">

     <% for (let s of size){ %> 
        <input
        form="newProduct"
          type="checkbox"
          class="btn-check"
          value="<%= s.otherSize %>"
          name="product[size]"
          id="<%= s.otherSize + "_s" %>"
         
        />
        <label class="btn btn-outline-secondary" for="<%= s.otherSize + "_s" %>"><%= String(s.otherSize).toUpperCase().slice(1) %></label>
       <% } %> 
    
    <!-- Button trigger modal -->
      <button type="button" class="btn btn-outline-primary float-end edit-size" data-bs-toggle="modal" data-bs-target="#sizeModal">
        Edit
      </button>

  </div>
  </div>
<!-- color -->
  <div class="mb-3">
    <label class="form-lable" for="color">Color</label>
    <div class="color">
      <% for (let c of color){ %> 
      <input
            form="newProduct"
            type="checkbox"
            class="btn-check"
            value="<%= c.otherColor %>"
            name="product[color]"
            id="<%= c.otherColor.replace(" ", "_")+"_c" %>"
            
          />
      <label class="btn btn-outline-secondary" 
      for="<%= c.otherColor.replace(" ", "_")+"_c" %>">
      <%= c.otherColor[1].toUpperCase() + c.otherColor.slice(2) %></label>
      <% } %> 
    <!-- Button trigger modal -->
      <button type="button" class="btn btn-outline-primary float-end edit-color" data-bs-toggle="modal" data-bs-target="#colorModal">
        Edit
      </button>
    </div>

   
  </div>
  
  <div class="mb-3">
    <label class="form-lable" for="size">Category</label>
    <select form="newProduct" class="form-select" name="product[category]" id="">
      <option form="newProduct" value="pants">Pants</option>
      <option form="newProduct" value="dress">Dress</option>
      <option form="newProduct" value="tshirt">T-shirt</option>
      <option form="newProduct" value="accessories">Accessories</option>
      <option form="newProduct" value="Homewear">Homewear</option>
    </select>
  </div>
  
  <div class="mb-3">
    <label class="form-lable" for="description">Description</label>
    <textarea
      form="newProduct"
      class="form-control"
      name="product[description]"
      rows="3"
    ></textarea>
  </div>
  <div class="d-grid gap-2 col-md-6 offset-md-3 max-auto">
    <input
      form="newProduct"
      class="btn btn-outline-secondary"
      type="submit"
      value="Submit"
    />
  </div>
</div>

</form>


<!-- Modal -->
<div class="modal fade" id="sizeModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">Edit Size</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="mb-3 size size-modal">
        <% for (let s of size){ %> 
        <input
          type="checkbox"
          class="btn-check"
          value="<%= s.otherSize %>"
          name="size"
          id="<%= s.otherSize %>"
        />
        <label class="btn btn-outline-secondary" data-label="<%= s.otherSize %>" for="<%= s.otherSize %>"><%= String(s.otherSize).toUpperCase().slice(1) %></label>

        <form class="deleteform" data-name="<%= s.otherSize + "_s" %>" action="/products/size/<%= s._id %>?_method=DELETE" method="post">
        <button class="close-modal">&times;</button>
        </form>

       <% } %> 
      </div>
        <form id="otherSizeForm"  action="" method="post">
          <label class="form-lable" for="otherSize">Other</label>
          <div class="mb-3">
            <input type="text" class="form-control size-input" name="otherSize" id="otherSize" />
          </div>
            <button type="submit" class="btn btn-outline-primary btn-addItem">Save</button>
    </form>
    
   
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
      </div>
      
    </div>
  </div>
</div>
<!-- Modal -->
<div class="modal fade" id="colorModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">Edit Color</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="mb-3 color color-modal">
        <% for (let c of color){ %> 
        <input
          type="checkbox"
          class="btn-check"
          value="<%= c.otherColor %>"
          name="color"
          id="<%= c.otherColor %>"
        />
        <label class="btn btn-outline-secondary" for="<%= c.otherColor.replace(" ", "_") %>"><%= c.otherColor[1].toUpperCase() + c.otherColor.slice(2) %></label>

        <form class="deleteform" data-name="<%= c.otherColor.replace(" ", "_")+"_c" %>" action="/products/color/<%= c._id %>?_method=DELETE" method="post">
        <button class="close-modal">&times;</button>
        </form>

       <% } %> 
      </div>
        <form id="otherColorForm" action="/products/color" method="post">
          <label class="form-lable" for="otherColor">Other</label>
          <div class="mb-3">
            <input type="text" class="form-control color-input" name="otherColor" id="otherColor" />
          </div>
            <button type="submit" class="btn btn-outline-primary btn-addItem">Save</button>
    </form>
   
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
      </div>
      
    </div>
  </div>
</div>

  <div class="mb-3">
    <form class="otherCategory" action="">
      <label class="form-lable" for="otherCategory">Other</label>
      <input
        type="text"
        class="form-control"
        name="otherCategory"
        id="otherCategory"
      />
    </form>
  </div>

     </div>
         