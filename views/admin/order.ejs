<% layout('/layout/boilerplate') -%>
<link rel="stylesheet" href="/css/order.css">
<div>
  <div class="card">
    <div class="row">
      <div class="col">
        <h5 class="card-title">Date</h5>
      </div>
      <div class="col">
        <h5 class="card-title">Order</h5>
      </div>
      <div class="col">
        <h5 class="card-title">Username</h5>
      </div>
      <div class="col">
        <h5 class="card-title">E-mail</h5>
      </div>
      <div class="col-1">
        <p class="card-title">Send</p>
      </div>
    </div>
  </div>
</div>
<hr />
<% for (let o of order){ %> 
<div>
  <div class="card mb-3">
    <div class="row">
      <div class="col">
        <h5 class="card-title"><%= String(o.date).slice(3,15) %></h5>
      </div>
      <div class="col">
        <a href="/admin/order/<%= o._id %>"><h5 class="card-title"><%= o._id %></h5></a>
      </div>
      <div class="col">
        <p class="card-title"><%= o.user.username %></h5>
      </div>
      <div class="col">
        <h5 class="card-title"><%= o.user.email %></h5>
      </div>
      <div class="col-1">
        <h5 class="card-title"><%= o.shipping == false ? "X" : "V" %></h5>
      </div>
    </div>
  </div>
</div>
<% } %> 
